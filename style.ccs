#halaman {
    width: 800px;
    margin: auto;
}

nav {
    background-color: #333;
    display: inline-block;
    width: 100%;
}

nav ul {
    padding: 0;
    margin: 0;
    list-style: none;
}

nav ul li {
    float: left;
    background-color: #333;
}

nav a {
    display: block;
    padding: 0 10px;
    color: #FFF;
    line-height: 60px;
    font-size: 20px;
    text-decoration: none;
}
